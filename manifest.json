{
  "manifest_version": 3,
  "name": "Landing Font QA",
  "version": "1.0.0",
  "description": "Display font-size and font-weight badges over visible text elements for QA",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_title": "Toggle Font QA",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
